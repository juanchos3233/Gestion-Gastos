@page
@model LoginModel
@{
    Layout = "~/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = null; // Sin el layout general
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        background: #222;
        min-height: 100vh;
    }
    .login-container {
        min-height: 100vh;
        display: flex;
        flex-direction: row;
    }
    .login-left {
        background: #222;
        color: #fff;
        padding: 60px 40px;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        min-width: 340px;
    }
    .login-logo {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 2rem;
    }
    .login-form {
        width: 100%;
        max-width: 340px;
        margin-top: 2rem;
    }
    .login-right {
        flex: 1;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .login-right img {
        width: 100%;
        height: 100vh;
        object-fit: cover;
    }
</style>

<div class="login-container">
    <div class="login-left">
        <div class="login-logo mb-5">
            <img src="~/img/logotipologin.png" alt="Logotipo" style="width: 140px; margin-bottom: 30px;" />
        </div>
        <h2 class="mb-4">Iniciar sesión</h2>
        <form class="login-form" method="post">
            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Dirección de correo electrónico" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" autocomplete="current-password" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info w-100 text-white">INICIAR SESIÓN</button>
            <div class="mt-3">
                <a asp-page="./ForgotPassword" class="link-light">¿Olvidó la contraseña?</a>
            </div>
            <div class="mt-3">
                <span>¿No tienes una cuenta? <a asp-page="./Register" class="link-info">Regístrese aquí</a></span>
            </div>
        </form>
    </div>
    <div class="login-right">
        <img src="~/img/imagenlogin.png"
             alt="Imagen Login" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
