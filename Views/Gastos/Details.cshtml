@model ExpenseTracker.Models.Gasto

@{
    ViewData["Title"] = "Detalles del Gasto";
}

<h2>Detalles del Gasto</h2>

<div class="mb-3">
    <label class="fw-bold">Categoría:</label>
    <div>@Model.Categoria.Titulo</div>
</div>

<div class="mb-3">
    <label class="fw-bold">Monto:</label>
    <div>@Model.Monto.ToString("C")</div>
</div>

<div class="mb-3">
    <label class="fw-bold">Fecha:</label>
    <div>@Model.Fecha.ToString("dd/MM/yyyy")</div>
</div>

<div class="mb-3">
    <label class="fw-bold">Descripción:</label>
    <div>@Model.Descripcion</div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
